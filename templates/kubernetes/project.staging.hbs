apiVersion: v1
kind: Namespace
metadata:
  name: "{{project}}"
  labels:
    provisioner: etimo-kubernetes
---
apiVersion: v1
kind: ResourceQuota
metadata:
  name: mem-cpu
  namespace: "{{project}}"
  labels:
    provisioner: etimo-kubernetes
spec:
  hard:
    requests.cpu: "0.5"
    requests.memory: 0.5Gi
    limits.cpu: "1"
    limits.memory: 1Gi
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: "{{project}}"
  name: "{{project}}-developer"
rules:
- apiGroups: ["", "extensions", "apps"]
  resources: ["*"]
  verbs: ["get", "list", "watch"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: "{{project}}-developers"
  namespace: "{{project}}"
roleRef:
  kind: Role
  name: "{{project}}-developer"
  apiGroup: ""
subjects:
{{#each owners}}
- kind: User
  name: "{{this}}"
  apiGroup: ""
{{/each}}